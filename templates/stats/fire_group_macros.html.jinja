{% from "stats/fire_mode_macros.html.jinja" import fire_mode_stats_macro with context %}

{% macro fire_group_stats_macro(fire_group, _loop) %}
    <div class="column is-full">
        <div class="box {{ _loop.cycle(*fire_group_background_classes) }}">
            <p class="title is-3 has-text-black" id="fire-group-{{ fire_group.fire_group_id }}">
                {{ fire_group.description }}
            </p>

            <div class="content">
                <p class="title is-4 has-text-black">Basic information</p>

                <table class="table is-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ fire_group.fire_group_id }}</td>
                        </tr>
                        <tr>
                            <th>
                                <span class="has-tooltip" data-tooltip="Duration to transition to this fire group">
                                    Transition time
                                </span>
                            </th>
                            <td>
                                {% if fire_group.transition_time > 0 %}
                                    {{ fire_group.transition_time }}ms
                                {% else %}
                                    Instant
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            {% if with_magdump_simulation and fire_group.magdump_simulation_base_path %}
                <div class="box">
                    <p class="title is-5">
                        <span class="has-tooltip" data-tooltip="Simulation of multiple whole magazine dumps without any control">
                            Magazine dump simulation
                        </span>
                    </p>

                    <figure class="image">
                        <a href="/{{ fire_group.magdump_simulation_base_path }}.html">
                            <span class="has-tooltip", data-tooltip="Click to view interactive chart!">
                                <img
                                    src="/{{ fire_group.magdump_simulation_base_path }}.png"
                                    target="_blank"
                                    style="max-width: 100%; width: auto"
                                />
                            </span>
                        </a>
                    </figure>
                </div>
            {% endif %}

            <div class="content">
                <p class="title is-4 has-text-black">Fire modes</p>

                <div class="columns is-multiline">
                    {% for fire_mode in fire_group.fire_modes %}
                        {{ fire_mode_stats_macro(fire_mode, _loop = loop) }}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <br />
{%- endmacro %}
