{% extends "base.html.jinja" %}

{% block title %}infantry weapons stats{% endblock %}

{% block breadcrumb %}
    <nav class="breadcrumb" aria-label="breadcrumbs">
        <ul>
            <li><a href="/index.html">Home</a></li>
            <li><a href="/stats.html">Stats</a></li>
            <li class="is-active"><a href="/stats/infantry-weapons.html" aria-current="page">Infantry weapons</a></li>
        </ul>
    </nav>
{% endblock %}

{% block content %}
    <p class="title is-1">Infantry weapons stats</p>

    <br />

    {% for fac, v1 in faction_category_infantry_weapons|items %}
        <div class="box" style="background-color:{{ faction_background_colors[fac] }}">
            <p class="title is-2">{{ fac|enum_name }}</p>

            <div class="columns is-multiline">
                {% for cat, v2 in v1|items %}
                    <div class="column is-4">
                        <div class="box">
                            <p class="title is-3">{{ cat|enum_name }}</p>
                            <ul>
                                {% for w in v2 %}
                                    <li>
                                        <a href="/stats/infantry-weapons/{{ w.slug }}-{{ w.item_id }}.html">{{ w.name }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
{% endblock %}
